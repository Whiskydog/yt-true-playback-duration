{
  "manifest_version": 3,
  "name": "YT True Duration",
  "version": "1.0",
  "description": "Display the duration of a YouTube video based on its playback speed.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png"
  },
  "author": "alan.varde@gmail.com",
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["scripts/yt-true-duration.js"],
      "run_at": "document_idle"
    }
  ]
}
